rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    // Anyone authenticated can read user profiles (to see name/photo when scanning)
    // Only the owner can write to their profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Ficadas (Connections)
    // Users can read only their own ficadas
    // Users can create new ficadas (logic in app should enforce userId == auth.uid)
    // Users can delete their own ficadas
    match /ficadas/{ficadaId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Notifications
    // Any auth user can create a notification (targetUserId will be in data)
    // Only the owner (userId field) can read/update (mark as read) their notifications
    match /notifications/{notificationId} {
      allow create: if request.auth != null; 
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
